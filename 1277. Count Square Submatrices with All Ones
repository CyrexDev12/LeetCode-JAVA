public class main {
    

    public static void main(String[] args) {
        // Test code here 
          int[][] matrix = {
            {0, 1, 1, 1},
            {1, 1, 1, 1},
            {0, 1, 1, 1}
        };


        System.out.println("Result: " + countSqaures(matrix));

    }




    public static int countSqaures(int[][] matrix) {
        int count = 0; 
        int rows = matrix.length;
        int cols = matrix[0].length;
        // Define a DP table wich is the size of the largest square submatrix
        int[][] dp = new int[rows][cols];

        for (int i = 0; i < rows; i++) {
            for (int j = 0; j < cols; j++) {
                if (matrix[i][j] == 1) {
                    if (i == 0 || j == 0) {
                        dp[i][j] = 1; // Only 1x1 possible at the borders
                    } else {
                        dp[i][j] = 1 + Math.min(Math.min(dp[i-1][j], dp[i][j-1]),
                        dp[i-1][j-1]
                        );
                    }
                    count += dp[i][j]; // add all of the squares ending here
                }

            }
        }

        return count; 

    } 



}
